{
  "font": "pango:Iosevka Term Nerd Font 11",
  "layer": "bottom",
  "position": "bottom",
  "height": 58,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": [
    "sway/workspaces",
    "sway/mode",
    "custom/sep",
    "sway/window"
  ],
  "modules-center": [
    "mpris"
  ],
  "modules-right": [
    "cpu",
    "memory",
    "temperature",
    "network",
    "bluetooth",
    "pulseaudio",
    "backlight",
    "battery",
    "idle_inhibitor",
    "clock",
    "tray",
    "custom/keepass",
    "custom/power"
  ],
  "sway/workspaces": {
    "format": "{name}",
    "disable-scroll": false,
    "all-outputs": false,
    "on-click": "activate"
  },
  "sway/mode": {
    "format": "<span style=\"italic\">  {}</span>",
    "tooltip": false
  },
  "sway/window": {
    "format": "{}",
    "max-length": 35,
    "tooltip": true,
    "rewrite": {
      "(.*) ‚Äî Mozilla Firefox": "üåé $1",
      "(.*) - Google Chrome": "üåé $1",
      "(.*) - Visual Studio Code": " $1"
    }
  },
  "mpris": {
    "player": "chromium",
    "dynamic-order": [
      "title"
    ],
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "format-stopped": "",
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl stop",
    "on-scroll-up": "playerctl volume 0.05+",
    "on-scroll-down": "playerctl volume 0.05-",
    "max-length": 30,
    "status-icons": {
      "paused": ""
    },
    "player-icons": {
      "default": ""
    }
  },
  "idle_inhibitor": {
    "format": "‚è∞ {icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    },
    "tooltip": true,
    "tooltip-format-activated": "Idle inhibitor: ON",
    "tooltip-format-deactivated": "Idle inhibitor: OFF"
  },
  "tray": {
    "icon-size": 18,
    "show-passive-items": true,
    "spacing": 10
  },
  "clock": {
    "format": "{:%H:%M %d/%m}",
    "on-click": "~/.config/waybar/scripts/open-outlook.sh",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'>{}</span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "üìä  {usage}%",
    "tooltip": true,
    "interval": 2,
    "states": {
      "warning": 70,
      "critical": 90
    },
    "on-click": "wezterm start --always-new-process htop"
  },
  "memory": {
    "format": " {used:0.1f}Gi",
    "tooltip": true,
    "tooltip-format": "RAM: {used:0.1f}GiB / {total:0.1f}GiB ({percentage}%)\nSwap: {swapUsed:0.1f}GiB / {swapTotal:0.1f}GiB",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "on-click": "wezterm start --always-new-process htop"
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["", "", ""],
    "tooltip": true,
    "on-click": "wezterm start --always-new-process sensors"
  },
  "network": {
    "format-wifi": "üåê  {signalStrength}%",
    "format-ethernet": "üåê ",
    "format-linked": "üåê  (No IP)",
    "format-disconnected": "üåê ‚ö†",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}\nGateway: {gwaddr}\nStrength: {signalStrength}%\nFrequency: {frequency}MHz",
    "tooltip-format-wifi": " {essid} ({signalStrength}%)\n{ifname}: {ipaddr}/{cidr}\nGateway: {gwaddr}\nFrequency: {frequency}MHz",
    "tooltip-format-ethernet": " {ifname}: {ipaddr}/{cidr}\nGateway: {gwaddr}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "wezterm start --always-new-process nmtui"
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "",
    "format-off": "",
    "format-connected": "",
    "format-connected-battery": " {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager"
  },
  "pulseaudio": {
    "format": "üîä {icon} {volume}%",
    "format-muted": "üîä  muted",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "tooltip-format": "{desc}\nVolume: {volume}%",
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +2%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -2%"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "üí° {icon} {percent}%",
    "format-icons": ["", "", "", "", "", "", "", "", ""],
    "tooltip": true,
    "tooltip-format": "Brightness: {percent}%",
    "on-scroll-up": "brightnessctl set +5%",
    "on-scroll-down": "brightnessctl set 5%-"
  },
  "battery": {
    "bat": "BAT0",
    "adapter": "ADP1",
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15,
      "good": 50
    },
    "format": "üîã {capacity}% {icon}",
    "format-charging": "üîã {capacity}% Û∞ÇÑ",
    "format-plugged": "üîã {capacity}% Û∞ö•",
    "format-alt": "üîã {time} {icon}",
    "format-full": "üîã 100% Û∞Åπ",
    "format-icons": [
      "Û∞Å∫",
      "Û∞Åª",
      "Û∞Åº",
      "Û∞ÅΩ",
      "Û∞Åæ",
      "Û∞Åø",
      "Û∞ÇÄ",
      "Û∞ÇÅ",
      "Û∞ÇÇ",
      "Û∞Åπ"
    ],
    "tooltip-format": "Battery: {capacity}%\nTime: {time}\nPower: {power}W\nCycles: {cycles}",
    "on-click": "gnome-power-statistics",
    "max-length": 25
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -p layer-shell &",
    "format": "‚èª"
  },
  "custom/keepass": {
    "format": "‚öôÔ∏è Û∞åæ",
    "tooltip-format": "KeePass (Click to toggle)",
    "on-click": "swaymsg '[app_id=\"keepassxc\"] scratchpad show' || swaymsg '[class=\"KeePassXC\"] scratchpad show'"
  }
}
